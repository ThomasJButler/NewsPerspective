# NewsAPI Configuration
NEWS_API_KEY=your_newsapi_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-35-turbo-instruct

# Azure Search Configuration
AZURE_SEARCH_KEY=your_azure_search_key_here
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_INDEX=news-perspective-index

# Azure AI Language Configuration (Optional - for enhanced analysis)
AZURE_AI_LANGUAGE_ENDPOINT=https://your-language-service.cognitiveservices.azure.com/
AZURE_AI_LANGUAGE_KEY=your_azure_language_key_here

# Azure Document Intelligence Configuration (Optional - for rich content extraction)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-document-intelligence.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_document_intelligence_key_here

# Application Configuration
MAX_ARTICLES_PER_RUN=20

# Article Source Mode: 'newsapi', 'rss', or 'mixed'
# - newsapi: Fetch only from NewsAPI (requires NEWS_API_KEY)
# - rss: Fetch only from RSS feeds (BBC, CNN, Reuters, Guardian, TechCrunch)
# - mixed: Fetch from both NewsAPI and RSS feeds (default)
ARTICLE_SOURCE_MODE=rss

# Batch Processing Configuration
BATCH_TOTAL_ARTICLES=500
BATCH_SIZE=20
BATCH_DELAY=10
